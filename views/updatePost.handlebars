<div class="row mt-4">
  <div class="col-md-6">
    <h3>New Post:</h3>

    <form class="form new-project-form">
        <input type="hidden" value="{{id}}" id="post-id">
      <div class="form-group">
        <label for="project-name">Title:</label>
        <input class="form-input" type="text" id="project-name" name="project-name" value="{{title}}"/>
      </div>
      
      <div class="form-group">
        <label for="project-desc">Content:</label>
        <textarea class="form-input" id="project-desc" name="project-desc">{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary updateBtn" >Update</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/updatePost.js"></script>